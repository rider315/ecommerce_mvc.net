@model EcommerceApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Welcome to EcommerceApp";
}

<!-- Hero Banner -->
<div class="jumbotron jumbotron-fluid text-center" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1557825835-70d97c73318b?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3') no-repeat center; background-size: cover; color: white; padding: 100px 0;">
    <div class="container">
        <h1 class="display-4" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); font-weight: bold;">Welcome to EcommerceApp</h1>
        <p class="lead" style="text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);">Discover the latest in electronics and gadgets!</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">Shop Now</a>
    </div>
</div>

<!-- Featured Products Carousel -->
<div class="container my-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div id="productCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.FeaturedProducts.Count(); i++)
            {
                var product = Model.FeaturedProducts.ElementAt(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@product.ImageUrl" class="d-block w-100" style="height: 300px; object-fit: cover; aspect-ratio: 4/3;" alt="@product.Name">
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <div>
                                <h3>@product.Name</h3>
                                <p>@product.Description</p>
                                <p><strong>$@product.Price</strong></p>
                                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!-- Category Highlights -->
<div class="container my-5">
    <h2 class="text-center mb-4">Shop by Category</h2>
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@category.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover; aspect-ratio: 4/3;" alt="@category.Name">
                    <div class="card-body text-center">
                        <h5 class="card-title">@category.Name</h5>
                        <a href="@category.Link" class="btn btn-outline-primary">Explore</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Customer Testimonials -->
<div class="container-fluid bg-light py-5">
    <h2 class="text-center mb-4">What Our Customers Say</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text">"Amazing products and fast delivery!"</p>
                    <p class="card-text"><strong>- Jane D.</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text">"Best electronics store online!"</p>
                    <p class="card-text"><strong>- Mark S.</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text">"Great customer service!"</p>
                    <p class="card-text"><strong>- Emily R.</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Newsletter Signup -->
<div class="container my-5">
    <h2 class="text-center mb-4">Stay Updated</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Subscribe" asp-controller="Home" method="post">
                <div class="input-group mb-3">
                    <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Subscribe</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Fade-in Animation -->
<style>
    .fade-in {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }
    .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const elements = document.querySelectorAll('.fade-in');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        });
        elements.forEach(element => observer.observe(element));
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}